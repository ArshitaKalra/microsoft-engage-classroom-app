<!doctype html>
<html lang="en">
<title>MSEP</title>

<!-- <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css"> -->
<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<body>
    <div>
        <h1 style="text-align: center;">PhoneBOOK</h1>
    </div>
    <hr>
    <div style="margin-left: 350px; margin-right: 350px;">
        <h2>Students</h2>
        <% if(details!=null) { %>
            <table id="phonebook" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>E-mail</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% details.forEach(function(item){ %>
                        <tr>
                            <td>
                                <%= item.name%>
                            </td>
                            <td>
                                <%= item.email%>
                            </td>
                            <td>
                                Click to send email
                            </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>
    </div>
    <div style="margin-left: 350px; margin-right: 350px;">
        <h2>Teachers</h2>
        <% if(tdetails!=null) { %>
            <table id="phonebook1" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>E-mail</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% tdetails.forEach(function(item){ %>
                        <tr>
                            <td>
                                <%= item.name%>
                            </td>
                            <td>
                                <%= item.email%>
                            </td>
                            <td>
                                Click to send email
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>
    </div>
</body>
<script>
    $(document).ready(function () {
        $('#phonebook').DataTable();
    });
</script>
<script>
    $(document).ready(function () {
        $('#phonebook1').DataTable();
    });
</script>

</html>
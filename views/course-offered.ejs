 <br>
 <center>
    <div class="container">
      <div id="nav-placeholder">

      </div>
      
      <script>
      $(function(){
        $("#nav-placeholder").load("navbar-teacher.html");
      });
      </script><br><br><br>
      <div>
        <h3 style="color: #403b87; font-weight: 700; margin-top: 2%;">OFFERED Courses</h3>
        <br>
      </div>
      <hr>
  </center>

  <div class="coursecontainer">
    <div class="row">
  <% if(courses!=null) { %>
      <% courses.forEach(function(item, index){ %>
  <div class="col-md-2 courseCard" style="padding: 0;">
      <!-- <div style="width: 100%; height: 100px; background-image: url('uploads/<%=item.pic%>');"></div> -->
      <img src="uploads/<%=item.pic%>" alt="Course Pic" style="width:100%; height: 100px; border-top-right-radius: 20px; border-top-left-radius: 20px;" >
      <div class="courseContainer">
          <h4><b><%=item.name%></b></h4> 
          <p><strong>Code :</strong> <%=item.code%></p>
          <p><strong>Instructor :</strong> <%=item.instructor%></p> 
          <p><strong>Cap :</strong> <%=item.cap%></p> 
          <p>Open <a href='tsinglecoursepage?code=<%=item.code%>' style="font-size: 20px; color: #f7a11c ;"> Course</a></p>
      </div>
  </div>
  <%if(index!=0 && index%3==0){%>
      <div><br><br></div>
      <% } %>
  <% }) %>
  <% } %>
</div>
</div>
<br><br>
        
    </body>
